<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.Straniza"
      xmlns:Practice="clr-namespace:Practice" x:Class="Practice.Straniza.Glavn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Glavn">

    <Grid>

        <TextBox x:Name="Time"
        Text="{Binding TickCounter, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Glavn}}}" 
        HorizontalAlignment="Left" 
        Margin="234,16,0,0" 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="40" Width="58"
        FontSize="22"
        Foreground="Black"
        TextChanged="TextBox_TextChanged"
        IsEnabled="False" 
        BorderBrush="{x:Null}"
        Background="{x:Null}" 
        SelectionBrush="{x:Null}"/>

        <Label Content="Мин до кварцевания"
            Margin="10,11,0,0" HorizontalAlignment="Left"  
            VerticalAlignment="Top"
            Height="40"
            Width="250" 
            FontSize="22"
            Foreground="Black"
            IsEnabled="False"
            BorderBrush="{x:Null}" 
            Background="{x:Null}"/>

    </Grid>
</Page>
